FROM node:22-alpine

WORKDIR /app

# Install system dependencies for development in a single layer
RUN apk add --no-cache \
    mysql-client \
    python3 \
    make \
    g++ \
    git \
    curl

# Copy package files first for better caching
COPY backend/package*.json ./

# Install dependencies (including devDependencies for development)
# Use npm install for development when lock file may be out of sync
RUN npm install && npm cache clean --force

# Copy source code
COPY backend/ .

# Create uploads directory with proper structure
RUN mkdir -p uploads/avatars uploads/announcements uploads/gallery uploads/equipments uploads/general && \
    chmod -R 755 uploads

# Expose port
EXPOSE 3001

# Health check for development
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:3001/api/health || exit 1

# Run NestJS application in development mode with watch
CMD ["npm", "run", "start:container"]
